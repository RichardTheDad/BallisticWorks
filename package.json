{
  "name": "ballistic-works-market",
  "version": "1.0.0",
  "description": "DarkRP-themed marketplace with Steam integration",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "railway-build": "npm install --production=false && cd client && npm install --production=false && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "passport": "^0.6.0",
    "passport-steam": "^1.0.17",
    "express-session": "^1.17.3",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.4",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["darkrp", "marketplace", "steam", "gmod"],
  "author": "BallisticWorks",
  "license": "MIT"
}
